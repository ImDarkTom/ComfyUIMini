{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
