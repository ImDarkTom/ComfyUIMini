<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', { title: "Settings", theme }) %>
    <link rel="stylesheet" href="/css/settings.css">
    <script src="/js/pages/settings.js" defer></script>
    <script src="/js/common/popupWindow.js" defer></script>
</head>
<body>
    <div class="main-container">
        <div class="option-container">
            <label for="select-theme">Theme</label>
            <select id="select-theme" onchange="changeTheme(this)">
                <option value="" disabled selected>Select a theme</option>
                    <optgroup label="Dark">
                        <option value="aurora">Aurora</option>
                        <option value="dark">Dark (Default)</option>
                        <option value="nord">Nord</option>
                        <option value="midnight">Midnight</option>
                    </optgroup>
                    <optgroup label="Light">
                        <option value="light">Light</option>
                        <option value="whiteout">Whiteout</option>
                    </optgroup>
            </select>
        </div>
        <div class="option-container">
            <label for="gallery-items-per-page">Gallery items per page</label>
            <input type="number" id="gallery-items-per-page" min="1" max="100" value="20">
            <input type="button" value="Set gallery items per page" onclick="setGalleryItemsPerPage(document.getElementById('gallery-items-per-page'))">
        </div>
    </div>
    <%- include('../partials/actionBar', {
        buttons: [
            { action: "/", icon: "home", text: "Home", type: "link" },
            { action: "#", icon: "blank", text: "...", type: "link" },
            { action: "#", icon: "blank", text: "...", type: "link" },
            { action: "#", icon: "blank", text: "...", type: "link" },
            { action: "/settings", icon: "settings", text: "Settings", type: "link" },
        ] 
    }) %>
</body>
</html>