<div id="resolution-selector" class="hidden">
    <div class="resolution-scale-buttons">
        <input type="radio" name="scale" id="SD15" value="0.5" />
        <label for="SD15">SD1.5 (x0.5)</label>
        <input type="radio" name="scale" id="SD21" value="0.75" />
        <label for="SD21">SD2.1 (x0.75)</label>
        <input type="radio" name="scale" id="SDXL" value="1" checked />
        <label for="SDXL">SDXL (x1.0)</label>
    </div>
    <div class="resolution-buttons">
        <div class="resolution-button">
            <div class="resolution-icon" data-aspect-ratio="9/21"></div>
